<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Wilderness.controller.LoginController">
   <children>
      <SplitPane dividerPositions="0.5" layoutY="72.0" prefHeight="222.0" prefWidth="400.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="217.0" prefWidth="160.0">
               <children>
                  <TextField fx:id="txtUserNameLogin" layoutX="24.0" layoutY="37.0" promptText="User Name" />
                  <TextField fx:id="txtPasswordLogin" layoutX="24.0" layoutY="98.0" promptText="Password" />
                  <Label fx:id="lblUserNameFeedbackLogin" layoutX="23.0" layoutY="62.0" prefWidth="150.0" />
                  <Label fx:id="lblPasswordFeedbackLogin" layoutX="23.0" layoutY="123.0" prefWidth="150.0" />
                  <Button fx:id="btnLogin" layoutX="75.0" layoutY="159.0" mnemonicParsing="false" onAction="#onLoginButtonPushed" text="Login" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <Button fx:id="btnRegisterNewUser" layoutX="41.0" layoutY="176.0" mnemonicParsing="false" onAction="#onRegisterButtonPushed" text="Register New User" />
                  <TextField fx:id="txtAdminIDRegister" layoutX="24.0" layoutY="42.0" promptText="Admin ID" />
                  <TextField fx:id="txtUserNameRegister" layoutX="24.0" layoutY="85.0" promptText="User Name" />
                  <TextField fx:id="txtPasswordRegister" layoutX="24.0" layoutY="133.0" promptText="Password" />
                  <Label fx:id="lblAdminIDFeedbackRegister" layoutX="24.0" layoutY="67.0" prefWidth="150.0" />
                  <Label fx:id="lblUserNameFeedbackRegister" layoutX="24.0" layoutY="110.0" prefWidth="150.0" />
                  <Label fx:id="lblPasswordFeedbackRegister" layoutX="24.0" layoutY="158.0" prefWidth="150.0" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
      <AnchorPane layoutX="-2.0" layoutY="-2.0" prefHeight="80.0" prefWidth="400.0">
         <children>
            <Label fx:id="lblLoginBanner" alignment="CENTER" layoutY="1.0" prefHeight="80.0" prefWidth="218.0" text="Login" textAlignment="JUSTIFY" underline="true">
               <font>
                  <Font name="Arial Unicode MS" size="37.0" />
               </font>
            </Label>
            <Label fx:id="lblRegisterBanner" layoutX="218.0" layoutY="1.0" prefHeight="80.0" prefWidth="184.0" text="Register" underline="true">
               <font>
                  <Font name="Arial Unicode MS" size="38.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
